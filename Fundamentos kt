   fun main(){
   
     //Operadores L√≥gicos 
     // 
     // s√£o usados quando queremos comparar mais de uma coisa na mesma condi√ß√£o 
     //  
     // && -> e 
     // || -> ou (shift + barra invertida) 
     //  
     // TABELA VERDADE (com E e OU) 
     //  
     // && - a determinada a√ß√£o s√≥ acontecer√° se e somente se todas as condi√ß√µes forem verdadeiras
     //   
     // VV -> verdadeiro   
     // VF -> falso
     // FV -> falso
     // FF -> falso 
     //  
     // || - a determinada ser√° executada se pelo menos uma das condi√ß√µes forem verdadeiras
     //  
     // VV -. verdadeiro
     // VF -> verdadeiro 
     // FV -> verdadeiro
     // FF -> falso 
     // 
   
   /*
     var idade = 1
     var acompanhadoDosPais = true
      
      
     if(idade >= 14 || acompanhadoDosPais == true){ 
         println("Pode entrar, curte ae") 
     }else{ 
         println("a entrada n√£o √© permitida para voc√™")
     }
    */  
    var brasilGanha = true 
     var alemanhaGanha = false
      
     
       if(brasilGanha >= true && alemanhaGanha == false){ 
        println("Brasil ganho, o Brasil √© massa") 
       }else{ 
        println("alemanha √© mo paia")
       }
     
     
      
      
  
  
 }  
