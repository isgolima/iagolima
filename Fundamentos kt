fun main(){  
  
 //La√ßos de repeti√ß√£o 
 //While 
 //Do..While   
 // 
 //for - para... 
 // 
 //for - para cada item em uma lista/ou qualquer tipo de cole√ß√£o, ser√° executada uma determinada a√ß√£o
 //
 //estrutura do for:
 //for(item in list/collection/intervalo){
 //a√ß√£o
 //}
 /*
 for(item in 1..1){ 
    println(3*1) 
    println(3*2) 
    println(3*3) 
    println(3*4) 
    println(3*5) 
    println(3*6) 
    println(3*7) 
    println(3*8) 
    println(3*9) 
    println(3*10)
 }  
  */ 
      
     
//repeat - repetir 
//
//uma determinada a√ß√£o ser√° repetida um determinado n√∫mero de vezes 
//
//          
   
repeat(10){ 
    println("||--------------tartaruga---------------||") 
}    
     
      
        
            
 
 
} 

