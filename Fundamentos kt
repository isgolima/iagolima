        //when 
        // 
        // quando uma determinada condi√ß√£o for verdadeira, outra determinada a√ß√£o sera executada 
        //  
        //  estrutura do when: 
        //   
        //when(var){ 
        //valor -> a√ß√£o a ser executada 
        //outrovalor -> a√ß√£o 
        //maisum ->  a√ß√£o 
        //outro -> a√ß√£o 
        //else -> a√ß√£o
        //}   
         
         var mes = 2 
         
        
         
        when(mes){ 
            1 -> println("Acalpuco - MEX") 
            2 ->  println("Paris - FRA") 
            3 ->  println("Berlim - ALE") 
            4 ->  println("Monaco - MON") 
            5 ->  println("Pequim - CHI")  
            6 ->  println("Acre - BRA") 
            7 ->  println("Roma - It√°lia") 
            8 ->  println("Atenas - GRE") 
            9 ->  println("Madrid -ESP") 
            10 ->  println("Manchester - ING") 
            11 ->  println("Dubai - EAU") 
            else ->  println("S√£o Paulo - BRA")

        }
         
        
         
    
    }
    
